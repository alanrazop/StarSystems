      <tr>
        <th>NGblock TC</th>
        <td><input id="ng_tc" class="input" value="0" type="text" name="ngblock_tc" placeholder="0"></td>
      </tr>
      <tr>
        <th>Horas semanales TC</th>
        <td><input id="horas_tc" class="input" placeholder="35" oninput="capTotal()"></td>
      </tr>
      <tr>
